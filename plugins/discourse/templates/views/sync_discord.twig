{% set currentPage = 'login' %}
{% set pageTitle = plugin.getTranslation('login') %}
{% set error = false %}

{% extends "base.twig" %}

{% block content %}

    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">{{ plugin.getTranslation('views.sync_discord.header') }}</h1>
        </div>
    </div>
    <div class="container mb-5">
        {% if Notice is defined %}
            {% if Notice.Type is not defined %}
                {% set Notice = Notice|merge({'Type': 'info'})%}
            {% endif %}
            <div class="container mt-4">
                <div class="alert alert-{{ Notice.Type }}">
                    <span id="notice_text">
                        {% if Notice.Icon is defined %}
                            <i class="{{ Notice.Icon }}"></i>
                        {% endif %}
                        {{ Notice.Text|raw }}
                    </span>
                </div>
            </div>
        {% endif %}
        <div class="card">
            <div class="card-body">
                <a href="?sync" type="button" class="btn btn-primary btn-block">{{ plugin.getTranslation('views.sync_discord.discord_sync') }}</a>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}