<div class="col-{{ col }}">
    <div class="card d-flex h-100">
        <a href="/{{ locale }}/service/{{ service.id }}">
            <div class="card-header">
                {% set serviceDetails = getService(service.id) %}
                <img src="{{ serviceDetails.image }}" width="64"/> 
                {{ service.name }} {% include "components/rating.twig" with {'rating': service.rating} %}
            </div>
        </a>
        <div class="card-body">


            <ul class="list-group">
                {% set count = 0 %}
                {% for point in getPointsByService(service.id) %}
                    {% if point.status == "approved" and count < 5 %}


                        {% set caseDetails = getCase(point.case_id) %}

                        {% if caseDetails.classification == "bad" %}
                            {% set color = "warning" %}
                        {% endif %}

                        {% if caseDetails.classification == "good" %}
                            {% set color = "success" %}
                        {% endif %}

                        {% if caseDetails.classification == "neutral" %}
                            {% set color = "secondary" %}
                        {% endif %}

                        {% if caseDetails.classification == "blocker" %}
                            {% set color = "danger" %}
                        {% endif %}


                        <li data-toggle="tooltip" title="{{ point.quoteText }}" class="list-group-item list-group-item-{{ color }}"><a  target="_blank" class="link-unstyled" href="{{ config.phoenix_url }}/points/{{ point.id }}">{{ point.title }}</a> <a data-toggle="tooltip" target="_blank" title="{{ 'visit_case'|translate }}" href="{{ config.phoenix_url }}/cases/{{ caseDetails.id }}"><span class="badge badge-primary badge-pill"><i class="fas fa-briefcase"></i></span></a></li>

                        {% set count = count + 1 %}
                    {% endif %}
                {% endfor %}
            </ul>
            {% if count == 5 %}
                <a target="_blank" href="{{ config.phoenix_url }}/services/{{ service.id }}"><span class="badge badge-primary"><i class="fas fa-eye"></i> {{ 'view_all_points'|translate }}</span></a>

            {% else %}
                <a target="_blank" href="{{ config.phoenix_url }}/services/{{ service.id }}"><span class="badge badge-success"><i class="fas fa-hands-helping"></i> {{ 'help_expanding'|translate }}</span></a>

            {% endif %}
        </div>
        <div class="card-footer">
            {# API #}
            <a target="_blank" href="{{ config.phoenix_url }}{{ config.phoenix_api_endpoint }}/services/{{ service.id }}"><span class="badge badge-warning"><i class="fas fa-code"></i> {{ 'api'|translate }}</span></a>

            {# Documents #}
            <a target="_blank" href="{{ config.phoenix_url }}/services/{{ service.id }}/annotate"><span class="badge badge-primary"><i class="fas fa-gavel"></i> {{ 'view_documents'|translate }}</span></a>

            {# Service URL #}
            <a target="_blank" href="//{{ service.url|split(',')[0] }}"><span class="badge badge-info"><i class="fas fa-link"></i> {{ 'visit_service'|translate }}</span></a>

            <a target="_blank" href="/api/badge/service/{{ serviceDetails.name }}"><img src="/api/badge/service/{{ serviceDetails.name }}"></a>

        </div>
    </div>
</div>