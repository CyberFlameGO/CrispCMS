{% if rank is not defined %}
    {% set rank = -1 %}
{% endif %}

{% if showsup is not defined %}
    {% set showsup = true %}
{% endif %}

{% if rank == -1 %}
    {% if showsup %}
        <sup>
        {% endif %}
        <span data-toggle="tooltip" data-title="{{ 'component_rank_special_tooltip'|translate }}"  class="badge badge-primary">
            <i class="fas fa-wrench"></i> 
            {{ 'component_rank_special'|translate }}
        </span>
        {% if showsup %}
        </sup>
    {% endif %}
{% endif %}

{% if rank == 2 %}
    {% if showsup %}
        <sup>
        {% endif %}
