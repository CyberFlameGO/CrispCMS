        {% endif %}
        <span data-toggle="tooltip" data-title="{{ 'component_rank_dev_tooltip'|translate }}" class="badge badge-warning">
            <i class="fas fa-code"></i> 
            {{ 'component_rank_dev'|translate }}
        </span>
        {% if showsup %}
        </sup>
    {% endif %}
{% endif %}
